@model Supplier

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Criar Fornecedor</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="NameSupplier">Nome do Fornecedor</label>
            <input asp-for="NameSupplier" placeholder="Nome do fornecedor" class="form-control" />
            <span asp-validation-for="NameSupplier" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CNPJ" >CNPJ do Fornecedor</label>
            <input asp-for="CNPJ" placeholder="CNPJ do fornecedor" class="form-control" />
            <span asp-validation-for="CNPJ" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Cep" id="cep">Cep Do Fornecedor</label>
            <input asp-for="Cep"  placeholder="Cep do fornecedor" class="form-control" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="QrCode">Variáveis do QrCode</label>    
            <select class="form-select"  aria-label="Default select example" asp-for="QrCode" asp-items="ViewBag.QrCodeVariables" class="form-control">
            <option>Nenhum</option>
            </select>
            <span asp-validation-for="QrCode" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">Criar</button>
        <a asp-controller="Supplier" asp-action="Index" class="btn btn-secondary" style="width:150px">Voltar a Lista</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
